{
  "name": "filesystem-mcp-server",
  "version": "1.0.0",
  "description": "Filesystem MCP Server - 提供安全的文件系统操作功能",
  "main": "filesystem-mcp-server.js",
  "bin": {
    "filesystem-mcp-server": "./filesystem-mcp-server.js"
  },
  "scripts": {
    "start": "node filesystem-mcp-server.js",
    "demo": "node filesystem-mcp-demo.js",
    "test": "node filesystem-mcp-demo.js",
    "install-mcp": "npm install @modelcontextprotocol/sdk",
    "setup": "npm install && node filesystem-mcp-demo.js"
  },
  "keywords": [
    "mcp",
    "filesystem",
    "ai",
    "model-context-protocol",
    "file-operations",
    "security"
  ],
  "author": "AI Assistant",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0"
  },
  "devDependencies": {},
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/filesystem-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/filesystem-mcp-server/issues"
  },
  "homepage": "https://github.com/your-username/filesystem-mcp-server#readme",
  "mcpConfig": {
    "serverName": "filesystem",
    "capabilities": [
      "tools"
    ],
    "tools": [
      "read_file",
      "write_file",
      "list_directory",
      "create_directory",
      "delete_file",
      "copy_file",
      "move_file",
      "get_file_info",
      "search_files",
      "get_working_directory",
      "watch_file"
    ],
    "security": {
      "allowedPaths": [
        "current_directory",
        "user_home",
        "temp_directory"
      ],
      "maxFileSize": "10MB",
      "maxSearchResults": 50
    }
  }
}