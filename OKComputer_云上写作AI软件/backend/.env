# 简化的环境变量配置 - 适合快速测试

# 服务器配置
NODE_ENV=development
PORT=3000

# 数据库配置 (如果没有数据库，可以暂时留空进行测试)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=ai_writing_db

# APIJSON配置 (可以保持默认值)
MD5_KEY=my-md5-secret-key
PASSWORD_SALT=my-password-salt
JWT_SECRET=my-jwt-secret-key

# 前端域名配置
ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# AI-Writer配置
AI_WRITER_MAX_LENGTH=1000
AI_WRITER_TEMPERATURE=0.8
AI_WRITER_ENABLED=true

# 其他配置保持默认即可